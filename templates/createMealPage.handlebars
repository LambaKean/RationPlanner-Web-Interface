<div class="container" data-template="createMealPage">

    <div class="elements-row">
        <label for="name" class="caption">Название</label>
        <input type="text" id="name" name="name">
    </div>

    <div class="elements-row">
        <label for="description" class="caption">Описание</label>
        <textarea name="description" id="description"></textarea>
    </div>

    <div class="elements-row">
        <label for="photo" class="caption">Фото</label>
        <input type="file" class="standard-input" id="photo">
    </div>

    <div class="elements-row">
        <div class="caption">Время готовки</div>
        <input type="number" id="hours" name="hours">
        <label for="hours">ч</label>
        <input type="number" id="minutes" name="minutes">
        <label for="minutes">м</label>
    </div>

    <div class="elements-row ingredients-row">
        <div class="caption">Ингредиенты</div>
        <div id="ingredients-container" class="ingredients-container"></div>
        <input type="button" class="button plus-button" id="plus-button" value="+">
    </div>

    <div class="elements-row">
        <label class="caption" for="recipe">Рецепт</label>
        <textarea name="" id="recipe" class="recipe"></textarea>
    </div>

    <div class="elements-row">
        <span class="caption"></span>
        <input type="button" class="button" id="save-button" value="Сохранить">
    </div>

    <div id="errors" class="errors"></div>

</div>